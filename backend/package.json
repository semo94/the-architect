{
  "name": "breadthwise-backend",
  "version": "1.0.0",
  "description": "Backend API for Breadthwise app",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/server.ts",
    "build": "tsc",
    "start": "node --env-file=.env dist/server.js",
    "migrate": "tsx --env-file=.env scripts/migrate.ts",
    "migrate:generate": "drizzle-kit generate --env-file=.env",
    "migrate:push": "drizzle-kit push --env-file=.env",
    "db:studio": "drizzle-kit studio --env-file=.env",
    "docker:up": "docker compose -f ./docker/docker-compose.yml up",
    "docker:build": "docker compose -f ./docker/docker-compose.yml build",
    "docker:down": "docker compose -f ./docker/docker-compose.yml down",
    "docker:logs": "docker compose -f ./docker/docker-compose.yml logs -f",
    "seed": "tsx scripts/seed.ts",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "fastify",
    "github-oauth",
    "jwt",
    "authentication",
    "typescript"
  ],
  "author": "Salim Bakri",
  "license": "Private",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/oauth2": "^8.1.2",
    "@fastify/rate-limit": "^10.3.0",
    "@neondatabase/serverless": "^1.0.2",
    "drizzle-orm": "^0.44.7",
    "fastify": "^5.6.2",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "postgres": "^3.4.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "drizzle-kit": "^0.31.6",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
